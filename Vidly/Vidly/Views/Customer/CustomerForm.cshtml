@model Vidly.ViewModels.NewCustomerViewModel
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Customer Details</h2>


@using (Html.BeginForm("Save", "Customer"))
{
    @Html.HiddenFor(m => m.Customer.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Name)
        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control", placeholder = "Name" })
    </div>
    <div class="form-group">
        @*For later reference https://docs.microsoft.com/en-us/dotnet/standard/base-types/standard-date-and-time-format-strings*@
        @Html.LabelFor(m => m.Customer.Birthdate)
        @Html.TextBoxFor(m => m.Customer.Birthdate, "d", new { @class = "form-control", placeholder = "MMDDYYY" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.MembershipTypeId)
        @Html.DropDownListFor(m => m.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select Membership Type", new { @class = "form-control" })
    </div>
    <div class="form-group form-check">
        @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsletter, new { @class = "form-check-input" })
        @Html.LabelFor(m => m.Customer.IsSubscribedToNewsletter, new { @class = "form-check-label" })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}

